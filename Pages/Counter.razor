@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>


<QueryTable query_name="my query" sql="SELECT TOP (1000) [Id],[Year],[Month],[HoursWorked],[HourlyRate],[Amount],[GST],[Comments],[ReceivedDate]  FROM [Billing]"></QueryTable>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
